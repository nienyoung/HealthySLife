<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval" >
            <corners android:radius="30dip"/>
            <solid android:color="@color/color_icon_red_pressed" />
            <size android:width="@dimen/fab_size" android:height="@dimen/fab_size"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval" >
            <corners android:radius="30dip"/>
            <solid android:color="@color/color_icon_red" />
            <size android:width="@dimen/fab_size" android:height="@dimen/fab_size"/>
        </shape>
    </item>
</selector>
